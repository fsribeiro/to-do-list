{
  "name": "to-do-list",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "format": "prettier --write \"modules/app/src/**/*.ts\" \"modules/app/test/**/*.ts\"",
    "lint": "eslint \"modules/app/{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:e2e": "jest --config ./modules/app/test/jest-e2e.json"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "lint-staged": {
    "./modules/app/src/*/*.ts": [
      "npm run lint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test && npm run test:e2e && lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "^8.6.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7"
  },
  "dependencies": {
    "prettier": "^2.5.1"
  }
}
